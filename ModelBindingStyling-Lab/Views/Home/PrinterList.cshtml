@model IEnumerable<ThreeDPrinters>

@{
    ViewData["Title"] = "Printer List";
}

<div class="printer-group">
    @foreach (var item in Model)
    {
        <div class="card text-center">
            <div class="card-header">@Html.DisplayFor(modelItem => item.Title)</div>
            <img src="@Html.DisplayFor(modelItem => item.PrinterImage)" class="card-img-top" alt="...">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Html.DisplayFor(modelItem => item.SKU)</li>
                <li class="list-group-item">@Html.DisplayFor(modelItem => item.Price)</li>
                <li class="list-group-item">@Html.DisplayFor(modelItem => item.BuildVolume)</li>
                <li class="list-group-item">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, 
                    sed do eiusmod tempor.
                </li>
            </ul>
        </div>
    }
</div>
